<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="pe.edu.upeu.excel.Excel.controller.ControllerExcel"
      spacing="10" stylesheets="@../css/styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <HBox alignment="CENTER" spacing="20">
        <Label text="Excel Viewer" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Importar Excel" onAction="#importExcel" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Exportar Excel" onAction="#exportExcel" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Limpiar" onAction="#clearData" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Label fx:id="statusLabel" text="Listo para importar/exportar" style="-fx-text-fill: #666;"/>
    </HBox>
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Filas:"/>
        <Label fx:id="rowCountLabel" text="0"/>
        <Label text="Columnas:"/>
        <Label fx:id="columnCountLabel" text="0"/>
        <Label text="Archivo:"/>
        <Label fx:id="fileNameLabel" text="Ninguno seleccionado" style="-fx-text-fill: #666;"/>
    </HBox>
    
</VBox> 